# Price Tracker Environment Configuration
# Copy this file to .env and fill in your values

# Flask Configuration
SECRET_KEY=your-secret-key-change-this-in-production
FLASK_DEBUG=true

# Database (SQLite by default, no config needed)
# DATABASE_URL=sqlite:///price_tracker.db

# SendGrid Email Configuration
# Get your API key at https://sendgrid.com
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=alerts@yourdomain.com

# Scheduler Configuration
# Set to 'true' to enable automatic price checks
ENABLE_SCHEDULER=false

# Check interval in minutes (optional)
# If not set, defaults to daily at 8 AM UTC
# For testing, try CHECK_INTERVAL_MINUTES=5
# CHECK_INTERVAL_MINUTES=5

# Server Configuration
PORT=5000
